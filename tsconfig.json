{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "alwaysStrict": true,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*",
    "./declarations/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}